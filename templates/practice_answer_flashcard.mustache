<div id="cardbox-practice-content" class="row">

    <div class="hidden-xs col-md-1 col-lg-2 col-xl-3"></div>
    <div id="cardbox-cardcontainer" class="col-xs-12 col-md-10 col-lg-8 col-xl-6" style="margin-bottom: 10px">
        <button id="cardbox-end-session" type="button" class="btn btn-secondary">{{topic}} {{# str }} endpractice, cardbox {{/ str }}</button>
    </div>
    <div class="hidden-xs col-md-1 col-lg-2 col-xl-3"></div>\
    <div class="hidden-xs col-md-1 col-lg-2 col-xl-3"></div>
    <div id="cardbox-flashcard-container" class="col-xs-12 col-md-10 col-lg-8 col-xl-6">
        <div class="cardbox-flashcard-card {{#iscorrect}}cardbox-flashcard-correct{{/iscorrect}}{{^iscorrect}}cardbox-flashcard-incorrect{{/iscorrect}}">
            <div class="cardbox-flashcard-header">
                {{#deck}}
                    <img src={{deckimgurl}} alt="This card belongs to Deck {{deck}}" class="cardbox_card_deck_icon">
                {{/deck}}
            </div>
            <div class="cardbox-flashcard-question">
                {{#question}}
                    {{> mod_cardbox/cardside }}
                {{/question}}
            </div>
            <div class="cardbox-flashcard-divider"></div>
            <div class="cardbox-flashcard-answer-section">
                <div class="cardbox-flashcard-result-icon">
                    {{#iscorrect}}
                        <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" fill="currentColor" class="cardbox-flashcard-icon-correct" viewBox="0 0 16 16">
                            <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z"/>
                        </svg>
                    {{/iscorrect}}
                    {{^iscorrect}}
                        <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" fill="currentColor" class="cardbox-flashcard-icon-incorrect" viewBox="0 0 16 16">
                            <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM5.354 4.646a.5.5 0 1 0-.708.708L7.293 8l-2.647 2.646a.5.5 0 0 0 .708.708L8 8.707l2.646 2.647a.5.5 0 0 0 .708-.708L8.707 8l2.647-2.646a.5.5 0 0 0-.708-.708L8 7.293 5.354 4.646z"/>
                        </svg>
                    {{/iscorrect}}
                </div>
                <div class="cardbox-flashcard-result-text">
                    {{#iscorrect}}
                        <h3>{{# str }} correct, cardbox {{/ str }}</h3>
                    {{/iscorrect}}
                    {{^iscorrect}}
                        <h3>{{# str }} incorrect, cardbox {{/ str }}</h3>
                    {{/iscorrect}}
                </div>
                <div class="cardbox-flashcard-correct-answer">
                    <strong>{{# str }} correctanswer, cardbox {{/ str }}:</strong>
                    {{#answer}}
                        {{> mod_cardbox/cardside }}
                    {{/answer}}
                </div>
                {{#contextansweravailable}}
                    <div class="cardbox-flashcard-explanation">
                        <strong>{{# str }} explanation, cardbox {{/ str }}:</strong>
                        <div class="cardbox-flashcard-explanation-content">{{{contextanswer}}}</div>
                    </div>
                {{/contextansweravailable}}
            </div>
        </div>
    </div>
    <div class="hidden-xs col-md-1 col-lg-2 col-xl-3"></div>

</div>

<div id="cardbox-practice-user-interaction" class="row">

    <div class="hidden-xs col-md-1 col-lg-2 col-xl-3"></div>
    <div class="col-xs-12 col-md-10 col-lg-8 col-xl-6">
        <button id="cardbox-flashcard-next" type="button" class="btn btn-primary cardbox-flashcard-next-btn">
            {{# str }} nextcard, cardbox {{/ str }}
        </button>
    </div>
    <div class="hidden-xs col-md-1 col-lg-2 col-xl-3"></div>

    <div class="hidden-xs col-md-1 col-lg-2 col-xl-3"></div>
    <div class="col-xs-12 col-md-10 col-lg-8 col-xl-6"> 
        <div style="float: right; margin-top: 15px">{{# str }} cardsleft, cardbox {{/ str }} {{cardsleft}}</div>
    </div>
    <div class="hidden-xs col-md-1 col-lg-2 col-xl-3"></div>

</div>
